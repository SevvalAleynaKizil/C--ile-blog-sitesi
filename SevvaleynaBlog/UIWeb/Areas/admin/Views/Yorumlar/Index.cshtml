
<div class="container">

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Yorumu Yapan</td>
                <td>Yorum</td>
                <td>Durumu</td>
                <td>İşlemler</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Commenter</td>
                    <td>@item.UserComment</td>
                    <td>@(item.Status == true ? "Aktif": "Pasif")</td>
                    <td>
                        <a href="/admin/Yorumlar/update/@item.Id" class="btn btn-primary">Güncelle</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>