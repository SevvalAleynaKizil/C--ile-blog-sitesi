
<div class="container">
    <a href="/admin/bloglar/Insert" class="btn btn-primary" style="margin-bottom:15px">Yeni Blog Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>#</td>
                <td>Blog Adı</td>
                <td>Yayın Tarihi</td>
                <td>Durumu</td>
                <td>İşlemler</td>
            </tr>

        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.BlogDateTime.ToString("dd-MM-yyyy")</td>
                    <td>@(item.Status == true ? "Aktif": "Pasif")</td>
                    <td>
                        <a href="/admin/bloglar/update/@item.Id" class="btn btn-primary">Güncelle</a>
                        <a href="/admin/bloglar/delete/@item.Id" class="btn btn-success">Sil</a>
                        <a href="/admin/Yorumlar/@item.Id" class="btn btn-info">Yorumlar</a>
                        <a href="/admin/Etkilesim/@item.Id" class="btn btn-info">Etkileşimler</a>

                    </td>

                </tr>
            }


        </tbody>

    </table>
</div>