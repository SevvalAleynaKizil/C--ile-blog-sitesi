
<header class="main-header " style="background-image: url(/images/@Model.Images)">
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">@Model.Name</h1>
            <div class="entry-title-divider">
                <span></span><span></span><span></span>
            </div>
            <h2 class="page-description"></h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>
<main class="content" role="main">
    <article class="post tag-fashion tag-art page">
        <section class="ost-content">
            <p style="padding:30px;">
                <i>@Html.Raw(Model.Explanation)</i>
            </p>
            <div class="wrap">
                <div class="contact">
                    <div class="cl-md-12">

                        <form action="/Blog/Details/@Model.Id" method="post">

                            <div class="to" align="center">
                                <input type="text" class="text" name="Commenter" style="width:500px; height:50px; " placeholder="İsim">

                                <input type="text" class="text" name="Email" style="width:500px; height:50px;" placeholder="Email">
                            </div>
                            <div class="text" align="center" style="margin-top:5px;">
                                <textarea value="Message:" name="UserComment" placeholder="Yorum" style="width:94%;"> </textarea>

                            </div>
                            <div>
                                <input type="submit" value="Yorumu Kaydet" style="margin-left:28px;" />
                            </div>
                        </form>
                        <div class="blog-post-body"   >
                            @if (Model.Comments != null)
                            {
                                foreach (var item in Model.Comments)
                                {
                                    if (item.Status == true)
                                    {
                                        <div class="text" style="margin-left:28px;background-color:#272627; color:#ffffff;">
                                            <div> <b>Yorum Yapan :</b> @item.Commenter </div>
                                            <div> <b>Yorum :</b> @item.UserComment</div>
                                            <hr/>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            </div>


            </div>
        </section>
    </article>
</main>

